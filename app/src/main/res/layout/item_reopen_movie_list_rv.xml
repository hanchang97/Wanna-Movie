<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_main_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_main_96"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gl_main_4"
        app:layout_constraintRight_toRightOf="@id/gl_main_96"

        app:shapeAppearanceOverlay="@style/CardViewRadius8"
        app:strokeColor="#B3B3B3"
        app:strokeWidth="1.2dp"

        app:cardUseCompatPadding="true"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_95"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"/>

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="330:15"/>

           <ImageView
               android:id="@+id/iv_movie_poster"
               android:layout_width="0dp"
               android:layout_height="0dp"
               app:layout_constraintTop_toBottomOf="@id/view_1"
               app:layout_constraintLeft_toRightOf="@id/gl_v_5"
               app:layout_constraintWidth_percent="0.3"
               app:layout_constraintDimensionRatio="3:4"/>

            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/iv_movie_poster"
                app:layout_constraintDimensionRatio="330:20"/>

            <View
                android:id="@+id/view_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/iv_movie_poster"
                app:layout_constraintBottom_toBottomOf="@id/iv_movie_poster"
                app:layout_constraintLeft_toRightOf="@id/iv_movie_poster"
                app:layout_constraintWidth_percent="0.08"/>

            <View
                android:id="@+id/view_1_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/iv_movie_poster"
                app:layout_constraintDimensionRatio="330:30"/>

            <TextView
                android:id="@+id/tv_movie_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/iv_movie_poster"
                app:layout_constraintBottom_toBottomOf="@id/view_1_1"
                app:layout_constraintLeft_toRightOf="@id/view_3"
                app:layout_constraintRight_toRightOf="@id/gl_v_95"

                android:text="영화제목"
                android:maxLines="2"
                style="@style/item_admin_rv_tv_title"/>

            <View
                android:id="@+id/view_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
                app:layout_constraintDimensionRatio="330:10"/>

            <View
                android:id="@+id/view_4_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_4"
                app:layout_constraintDimensionRatio="330:16"/>

            <View
                android:id="@+id/view_4_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_4_1"
                app:layout_constraintDimensionRatio="330:19"/>

            <TextView
                android:id="@+id/tv_movie_release_date_des"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_4"
                app:layout_constraintBottom_toBottomOf="@id/view_4_1"
                app:layout_constraintLeft_toRightOf="@id/view_3"
                app:layout_constraintRight_toRightOf="@id/gl_v_95"
                android:text="개봉일"
                android:maxLines="1"
                style="@style/item_admin_release_des"/>

            <TextView
                android:id="@+id/tv_movie_release_date"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_movie_release_date_des"
                app:layout_constraintBottom_toBottomOf="@id/view_4_2"
                app:layout_constraintLeft_toRightOf="@id/view_3"
                app:layout_constraintRight_toRightOf="@id/gl_v_95"
                android:text="2020-01-01"
                android:maxLines="1"
                style="@style/item_admin_release"/>

            <View
                android:id="@+id/view_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_movie_release_date"
                app:layout_constraintDimensionRatio="330:10"/>

            <View
                android:id="@+id/view_5_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_5"
                app:layout_constraintDimensionRatio="330:17"/>

            <View
                android:id="@+id/view_5_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_5_1"
                app:layout_constraintDimensionRatio="330:23"/>


            <TextView
                android:id="@+id/tv_reopen_decision_date_des"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_5"
                app:layout_constraintBottom_toBottomOf="@id/view_5_1"
                app:layout_constraintLeft_toRightOf="@id/view_3"
                app:layout_constraintRight_toRightOf="@id/gl_v_95"
                android:text="재개봉 확정 결정일"
                android:maxLines="1"
                style="@style/item_admin_release_des"/>

            <TextView
                android:id="@+id/tv_reopen_decision_date"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_reopen_decision_date_des"
                app:layout_constraintBottom_toBottomOf="@id/view_5_2"
                app:layout_constraintLeft_toRightOf="@id/view_3"
                app:layout_constraintRight_toRightOf="@id/gl_v_95"
                android:text="2020-01-01"
                android:maxLines="1"
                style="@style/item_admin_release_des"/>









        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>