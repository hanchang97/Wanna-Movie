<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_main_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_main_95"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gl_main_5"
        app:layout_constraintRight_toRightOf="@id/gl_main_95"
        app:layout_constraintBottom_toBottomOf="parent"

        app:shapeAppearanceOverlay="@style/CardViewRadius8"
        app:strokeColor="#B3B3B3"
        app:strokeWidth="1.2dp"

        app:cardUseCompatPadding="true"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_v_95"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"/>

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="345:15"/>

            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_1"
                app:layout_constraintDimensionRatio="345:20"/>

            <TextView
                android:id="@+id/tv_name_des"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_1"
                app:layout_constraintBottom_toBottomOf="@id/view_2"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_5"

                android:text="작성자"
                android:maxLines="1"
                style="@style/tv_comment_name_des"/>

            <View
                android:id="@+id/view_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/tv_name_des"
               app:layout_constraintBottom_toBottomOf="@id/tv_name_des"
                app:layout_constraintLeft_toRightOf="@id/tv_name_des"
                app:layout_constraintWidth_percent="0.03"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="@id/tv_name_des"
                app:layout_constraintBottom_toBottomOf="@id/tv_name_des"
                app:layout_constraintLeft_toRightOf="@id/view_3"

                android:text="작성자"
                android:maxLines="1"
                style="@style/tv_comment_name_des"/>


            <View
                android:id="@+id/view_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/view_2"
                app:layout_constraintDimensionRatio="340:15"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_5"
                app:layout_constraintRight_toRightOf="@id/gl_v_95"
                app:layout_constraintTop_toBottomOf="@id/view_4"
                style="@style/tv_comment_content"/>

            <View
                android:id="@+id/view_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_content"
                app:layout_constraintDimensionRatio="340:15"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/gl_v_5"
                app:layout_constraintRight_toRightOf="@id/gl_v_95"
                app:layout_constraintTop_toBottomOf="@id/view_5"
                style="@style/tv_comment_name_des"
                android:maxLines="1"/>

            <View
                android:id="@+id/view_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_date"
                app:layout_constraintDimensionRatio="345:15"/>








        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>