<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- vertical guideline -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_4.44"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0444"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_29.4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.294"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_33.32"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3332"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_35.54"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3554"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_64.42"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6442"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_66.64"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6664"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_92.7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.927"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_v_95.56"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9556"/>

        <!-- Tool bar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:contentInsetStartWithNavigation="0dp"
            android:background="@color/white"
            />
        <!-- -->

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintDimensionRatio="360:10"/>

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/view_1"
            app:layout_constraintLeft_toRightOf="@id/gl_v_4.44"
            app:layout_constraintWidth_percent="0.194"
            app:layout_constraintDimensionRatio="1:1"

            android:src="@drawable/img_mentor"/>

        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_1"
            app:layout_constraintDimensionRatio="360:11"/>

        <View
            android:id="@+id/view_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_1"
            app:layout_constraintDimensionRatio="360:35"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@id/gl_v_29.4"
            app:layout_constraintTop_toBottomOf="@id/view_2"
            app:layout_constraintBottom_toBottomOf="@id/view_3"
            app:layout_constraintDimensionRatio="200:24"
            android:maxLines="1"
            android:text="000님"

            style="@style/tv_mypage_name"/>

        <View
            android:id="@+id/view_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_1"
            app:layout_constraintDimensionRatio="360:59"/>

        <TextView
            android:id="@+id/tv_hello"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_3"
            app:layout_constraintBottom_toBottomOf="@id/view_4"
            app:layout_constraintLeft_toRightOf="@id/gl_v_29.4"
            app:layout_constraintDimensionRatio="200:24"
            android:text="안녕하세요."
            style="@style/tv_mypage_hello"
            />


        <View
            android:id="@+id/view_5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintDimensionRatio="360:90"/>

        <View
            android:id="@+id/view_6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_5"
            app:layout_constraintDimensionRatio="360:20"/>

        <View
            android:id="@+id/view_8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_6"
            app:layout_constraintDimensionRatio="360:16"
            android:background="@color/wm_gray_5"/>

        <!-- 내 정보 -->
        <LinearLayout
            android:id="@+id/ll_goto_userinfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_8"
            app:layout_constraintDimensionRatio="360:46"
            android:orientation="horizontal"
            android:weightSum="360">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="328"
                android:orientation="vertical"
                android:weightSum="46">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="22"
                    android:text="내 정보"
                    style="@style/tv_mypage_small_title"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16"/>
        </LinearLayout>

        <View
            android:id="@+id/view_line_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ll_goto_userinfo"
            app:layout_constraintDimensionRatio="360:5"
            android:background="@color/wm_gray_4"/>


        <LinearLayout
            android:id="@+id/ll_goto_reopening_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_line_1"
            app:layout_constraintDimensionRatio="360:46"
            android:orientation="horizontal"
            android:weightSum="360">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="328"
                android:orientation="vertical"
                android:weightSum="46">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="22"
                    android:text="재개봉 확정 리스트"
                    style="@style/tv_mypage_small_title"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16"/>
        </LinearLayout>



        <View
            android:id="@+id/view_line_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ll_goto_reopening_list"
            app:layout_constraintDimensionRatio="360:5"
            android:background="@color/wm_gray_4"/>











    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>