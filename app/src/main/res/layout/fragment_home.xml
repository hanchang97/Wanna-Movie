<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Tool bar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:contentInsetStartWithNavigation="0dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:orientation="horizontal"
                android:weightSum="100">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"/>

                <TextView
                    android:id="@+id/tv_home_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:text="@string/title"
                    style="@style/tv_splash_mainTitle"
                    android:maxLines="1"
                    android:layout_weight="35"/>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"

            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_v_4.44"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.0444"/>


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_v_95.56"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.9556"/>

                <!-- ////////////////// -->


                <View
                    android:id="@+id/view_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="360:200"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="@id/view_1"
                    app:layout_constraintBottom_toBottomOf="@id/view_1"
                    android:background="#DCAEFB">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl_h_1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.05"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl_h_2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.35"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl_h_3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.40"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl_h_4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.57"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl_h_5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.77"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl_h_6"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.86"/>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl_v_1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.07"/>

                    <ImageView
                        android:id="@+id/iv_home_banner"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_watch_movie2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintWidth_percent="0.45"

                        />

                    <TextView
                        android:id="@+id/tv_banner_des_1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@id/gl_h_1"
                        app:layout_constraintBottom_toTopOf="@id/gl_h_2"
                        app:layout_constraintLeft_toRightOf="@id/gl_v_1"
                        app:layout_constraintRight_toLeftOf="@id/iv_home_banner"

                        android:text="@string/tv_home_banner_des"
                        style="@style/tv_home_banner"

                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/tv_banner_des_2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@id/gl_h_3"
                        app:layout_constraintBottom_toTopOf="@id/gl_h_4"
                        app:layout_constraintLeft_toRightOf="@id/gl_v_1"
                        app:layout_constraintRight_toLeftOf="@id/iv_home_banner"

                        android:text="워너무비"
                        style="@style/tv_home_banner2"

                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/tv_banner_des_3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toBottomOf="@id/gl_h_5"
                        app:layout_constraintBottom_toTopOf="@id/gl_h_6"
                        app:layout_constraintLeft_toRightOf="@id/gl_v_1"
                        app:layout_constraintRight_toLeftOf="@id/iv_home_banner"

                        android:text="당신의 영화를 보여주세요"
                        style="@style/tv_home_banner2"

                        android:maxLines="1"/>

                </androidx.constraintlayout.widget.ConstraintLayout>



                <View
                    android:id="@+id/view_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_1"
                    app:layout_constraintDimensionRatio="360:28"/>

                <ProgressBar
                    android:id="@+id/loading_progressBar_userInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/view_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    android:indeterminateTint="@color/wm_primary"
                    android:visibility="invisible"
                    />



                <View
                    android:id="@+id/view_3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_2"
                    app:layout_constraintDimensionRatio="360:22"/>


                <!-- top5 -->

                <TextView
                    android:id="@+id/tv_top5_age"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_2"
                    app:layout_constraintBottom_toBottomOf="@id/view_3"
                    app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
                    app:layout_constraintWidth_percent="0.68"
                    android:text="@string/tv_home_age_top5"
                    style="@style/tv_home_des_1"
                    />

                <View
                    android:id="@+id/view_4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_top5_age"
                    app:layout_constraintDimensionRatio="360:14"/>

                <View
                    android:id="@+id/view_5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_4"
                    app:layout_constraintDimensionRatio="360:135"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_top5_age"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_4"
                    app:layout_constraintBottom_toBottomOf="@id/view_5"
                    app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
                    app:layout_constraintRight_toRightOf="parent"

                    android:overScrollMode="never"/>

                <ProgressBar
                    android:id="@+id/loading_progressBar_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/view_4"
                    app:layout_constraintBottom_toBottomOf="@id/view_5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    android:indeterminateTint="@color/wm_primary"
                    android:visibility="invisible"
                    />

                <View
                    android:id="@+id/view_6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_5"
                    app:layout_constraintDimensionRatio="360:40"/>

                <View
                    android:id="@+id/view_7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_6"
                    app:layout_constraintDimensionRatio="360:22"/>


                <TextView
                    android:id="@+id/tv_top5_sex"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_6"
                    app:layout_constraintBottom_toBottomOf="@id/view_7"
                    app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
                    app:layout_constraintWidth_percent="0.68"
                    android:text="@string/tv_home_sex_top5"
                    style="@style/tv_home_des_1"
                    />

                <View
                    android:id="@+id/view_8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_top5_sex"
                    app:layout_constraintDimensionRatio="360:14"/>


                <View
                    android:id="@+id/view_9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_8"
                    app:layout_constraintDimensionRatio="360:135"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_top5_sex"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_8"
                    app:layout_constraintBottom_toBottomOf="@id/view_9"
                    app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
                    app:layout_constraintRight_toRightOf="parent"

                    android:overScrollMode="never"/>

                <ProgressBar
                    android:id="@+id/loading_progressBar_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/view_8"
                    app:layout_constraintBottom_toBottomOf="@id/view_9"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    android:indeterminateTint="@color/wm_primary"
                    android:visibility="invisible"
                    />


                <View
                    android:id="@+id/view_10"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_9"
                    app:layout_constraintDimensionRatio="360:40"/>

                <View
                    android:id="@+id/view_11"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_10"
                    app:layout_constraintDimensionRatio="360:22"/>


                <TextView
                    android:id="@+id/tv_top5_address"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_10"
                    app:layout_constraintBottom_toBottomOf="@id/view_11"
                    app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
                    app:layout_constraintWidth_percent="0.78"
                    android:text="@string/tv_home_address_top5"
                    style="@style/tv_home_des_1"
                    />

                <View
                    android:id="@+id/view_12"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_top5_address"
                    app:layout_constraintDimensionRatio="360:14"/>

                <View
                    android:id="@+id/view_13"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_12"
                    app:layout_constraintDimensionRatio="360:135"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_top5_address"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_12"
                    app:layout_constraintBottom_toBottomOf="@id/view_13"
                    app:layout_constraintLeft_toLeftOf="@id/gl_v_4.44"
                    app:layout_constraintRight_toRightOf="parent"

                    android:overScrollMode="never"/>

                <ProgressBar
                    android:id="@+id/loading_progressBar_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/view_12"
                    app:layout_constraintBottom_toBottomOf="@id/view_13"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    android:indeterminateTint="@color/wm_primary"
                    android:visibility="invisible"
                    />


                <View
                    android:id="@+id/view_14"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@id/view_13"
                    app:layout_constraintDimensionRatio="360:30"/>


















            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>