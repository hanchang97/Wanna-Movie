<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WannaMovie" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#DDDDDD</item>
        <!-- Customize your theme here. -->



        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="btnRadiusShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="categoryCardViewShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="CardViewRadius8">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="CardViewRadius13">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">13%</item>
    </style>

    <style name="CardViewRadius30">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>


    <!-- Toolbar style -->
    <style name="ToolbarStyle.Dark" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleStyle.Dark</item> <!-- Toolbar의 타이틀 텍스트-->
    </style>

    <!-- Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleStyle.Dark" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black</item> <!-- Toolbar의 타이틀 텍스트 색상-->
        <item name="android:textStyle">bold</item>

    </style>

</resources>